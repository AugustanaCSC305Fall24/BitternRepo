<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox id="myVBox" alignment="CENTER" prefHeight="370.0" prefWidth="548.0" spacing="20.0" style="-fx-background-image: url(&quot;https://i.pinimg.com/564x/6f/b9/83/6fb9838f2d2c24b7b00a57fb4dc62317.jpg&quot;); -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.augustana.WelcomeController">
   <children>
      <Label minWidth="-Infinity" prefHeight="59.0" prefWidth="558.0" text="HAM Radio Simulator" textFill="#1251ff">
         <font>
            <Font name="Lucida Sans Typewriter Bold Oblique" size="48.0" />
         </font>
         <effect>
            <DropShadow>
               <color>
                  <Color red="0.6315789222717285" green="0.6315789222717285" blue="0.6315789222717285" />
               </color>
            </DropShadow>
         </effect></Label>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="25.0">
         <children>
            <Button fx:id="trainingButton" onAction="#switchToTraining" style="-fx-background-color: #ffffff;" text="Training">
               <effect>
                  <DropShadow />
               </effect>
               <font>
                  <Font name="Lucida Sans Typewriter Regular" size="16.0" />
               </font></Button>
            <Button fx:id="scenarioMenuButton" onAction="#switchToScenario" style="-fx-background-color: #ffffff;" text="Scenarios">
               <effect>
                  <DropShadow />
               </effect>
               <font>
                  <Font name="Lucida Sans Typewriter Regular" size="16.0" />
               </font></Button>
            <Button fx:id="serverButton" onAction="#switchToServer" style="-fx-background-color: #ffffff;" text="Server">
               <effect>
                  <DropShadow />
               </effect>
               <font>
                  <Font name="Lucida Sans Typewriter Regular" size="16.0" />
               </font></Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
